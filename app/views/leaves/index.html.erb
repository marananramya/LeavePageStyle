
<div class="container">
	<h1><%= current_user.name %></h1>
	<table border='1'>
	  <tr>  
	    <th>From Date</th>
	    <th>To Date</th>
	    <th>No of Days</th>
	    <th>Type of Leave</th>
	    <th>Reason</th>
	  </tr>
		<% @leaves.each do |leave| %>
	 	<% if (current_user.name == leave.user.name) %>
	   	<tr><td><%= leave.from_date %></td>
		<td><%= leave.to_date %></td>
		<td><%= leave.no_of_days %></td>
		<td><%= leave.type_of_leave %></td>
		<td><%= leave.reason %></td></tr>
		<% end %>
<% end %>
</table>
<br/>
<%= link_to 'Apply Leave', new_leave_path %>
<p id = "button"> Remaining Leaves </p>
<table border='1' id="p" style="display:none;">
	  <tr>  
	    <th>Sick Leave</th>
	    <th>Planned Leave</th>
	    <th>Casual Leave</th>
	  </tr>
		<% @leaves.each do |leave| %>
	 	<% if (current_user.name == leave.user.name) %>
	   	<tr><td><%= leave.sickleave %></td>
		<td><%= leave.plannedleave %></td>
		<td><%= leave.casualleave %></td>
		<% end %>
<% end %>
</table>
</div>
<script type="text/javascript">
$("#button").click(function(){
        $("#p").toggle();
    });  
</script>


